<%= form_for([@shark, @shark.victims.build]) do |f| %>
<p>
<%= f.label :name %><br>
<%= f.text_field :name %></p>
<p>
<%= f.label :victim_species %><br>
<%= f.text_field :victim_species %></p>
<p>
<%= f.label :location %><br>
<%= f.text_field :location %></p>
<p>
<%= f.label :fatal, "What this fatal?" %> 
<%= f.check_box :fatal  %></p>

<p>
<%= f.label :description, "Describe the events in vivid detail please" %><br>
<%= f.text_area :description %></p>
<%= f.submit %></p>
<% end %>

